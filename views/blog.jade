extends layout

block content
	#aboutme.uk-text-center
		h1 Our Blog
			hr
	.uk-grid-small.uk-text-center#aboutme(class='uk-child-width-1-3@m' uk-grid='')
		- for (var i = 0; i < 9; ++i) {
		.uk-text-center
			.uk-inline-clip.uk-transition-toggle(tabindex='0')
				img#blog.uk-transition-scale-up.uk-transition-opaque(src='https://getuikit.com/docs/images/dark.jpg' alt='')
				.uk-position-center
					h3 Title Post #{i+1} 
					span.uk-transition-fade 
						b Read More
						hr
						
		- }


